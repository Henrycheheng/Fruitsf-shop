/* pages/addRemarks/addRemarks.wxss */
.remark-box{
  padding: 20rpx 40rpx;
  background: #f5f5f5;
  margin: 20rpx 0 60rpx 0;
  position: relative;
}
.remark-box label{
  position: absolute;
  right: 30rpx;
  color: #969696;
  font-size: 14px;
  bottom:30rpx;
}
.content{
  padding: 40rpx 40rpx;
  background: #ffffff;
}
form{
  width: 100%;
  /* padding: 20rpx 40rpx; */
}
.remark-box textarea{
  width: 100%;
    font-size: 14px;
  color: #656565;
}

.btn-box{
  display: flex;
  height: 98rpx;
}
.btn-box .cancel,.confirm{
  flex: 1
}
.cancel{
  text-align: center;
  color: #656565;
  border:2rpx solid rgba(55,210,96,1);
  line-height:100rpx; 
}
.confirm{
  background: #37D260;
  text-align: center;
  color: #ffffff;
  line-height:100rpx; 
  border:2rpx solid rgba(55,210,96,1);
  border-radius:0 6rpx 6rpx 0;
}