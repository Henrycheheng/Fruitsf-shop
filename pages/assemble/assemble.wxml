<!--pages/assemble/assemble.wxml-->
<wxs src="../../utils/utils.wxs" module="tools"></wxs>
<view class='assemble-container'>
  <view class='navbar'>
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick" data-type="{{item.value}}">
            <view class="weui-navbar__title">{{item.name}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
    </view>
  </view>
  <view class="weui-tab-content">

      <view class='self mention'>
        <view class='mention-list' wx:for="{{groupList}}" wx:for-item="item">
          <view class='commodity-img'>
            <image mode='aspectFill' src="{{item.img}}"></image>
          </view>
          <view class='commodity-desc'>
            <view class='tag-view'>
              <view class='tag-title tag-color'>{{item.attend_count}}人拼团</view>
              <view class='tag-title tag-color-desc'>距结束：{{tools.getTime(item.start_time,item.ent_time)}}天</view>
            </view>
            <view class='fruits-desc'>{{item.name}} {{item.desc}}</view>
            <view class='fruits-time'>提货时间：{{tools.getTextByArray(item.getstart,item.getend)}}</view>
            <view class='fruits-price'>
              <view class='price'>￥{{item.multi_price}}</view>
            </view>
            <view class='go-assemble'>
              去拼团 >
            </view>
          </view>
        </view>

    </view>
  </view>
</view>