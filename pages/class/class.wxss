/* pages/class/class.wxss */
page{
  height: 100%;
}
.class-content{
  width: 100%;
  display: flex;
  height: 100%;
}

.list-box{
  width: 180rpx;
  /* flex: 0 0 180rpx; */
  background: #f5f5f5;
  height: 100%;
  position: fixed;
}

.list-box .category-item {
  padding:40rpx 0rpx;
  text-align: center;
  font-size: 14px;
  color: #656565
}
.goods-content{
  width: 550rpx;
  margin: 0 0 0 20rpx;
}
.list-box .category-item.active {
  background: #fff;
  border-left: 6rpx solid #37D260;
  color: #37D260;
  font-size: 15px;
  border-top: 1rpx solid #EFEFEF;
  border-bottom: 1rpx solid #EFEFEF;
}

.list-box .category-item .name {
  display: inline-block;
  font-size: 28rpx;
  color: #646464;
  line-height: 1.2;
  text-align: left;
  pointer-events: none;
}

.list-box .category-item .name.active {
  color: #FF5777;
  font-weight: bold;
}
.goods-img-box{
  display: flex;
  align-items: center;
}
.goods-img-box image{
  width: 180rpx;
  height: 180rpx;
}
.list-body{
  display: flex;
}
.goods-body{
  /* position: absolute;
  left: 180rpx;
  right: 0; */
  margin-left: 180rpx;
}
.goods-info{
  width: 330rpx;
  padding: 0 20rpx;
  position: relative
}
.goods-item{
  display: flex;
  padding: 30rpx 0;
  border-bottom:1px solid #EEEEEE;
}
.goods-price{
  display: flex!important;
  justify-content: space-between;
}
.good-bottom{
  position: absolute;
  bottom:0;
  left: 0;
  right: 30rpx;
  width: 100;
}
.add{
  display: flex;
  align-items: center;
}
.goods-name{
  font-size:15px;
  color: #212121;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  /* width: 300rpx; */
}
.goods-desc{
  color: #656565;
  font-size: 13px;
}
.nowPrice{
  color: #FF9F06;
  font-size: 16px;
  padding: 0 5rpx 0 0;
  font-weight: bold;
}
.oldPrice{
  color: #969696;
  font-size: 13px;
  text-decoration:line-through;
}
.add image{
  width: 40rpx;
  height: 40rpx;
}



.content{
  display: flex;
}
.left{
  width: 180rpx;
}
.right{
  flex: 1
}