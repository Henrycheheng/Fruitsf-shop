page {
  width: 100%;
  height: 100%;
    background: #f5f5f5;
}

.container {
  width: 100%;
  height: 100%;
}
.navbar{
  background: #fff;
  height: 80rpx;
}

.nav {
  width: 100%;
  line-height: 74rpx;
  font-size: 13px;
  white-space: nowrap;
  /* position: fixed;
  top: 0;
  left: 0; */
  border-top: 1px solid #d2d2d2;
}

.nav-item {
  position: relative;
  padding: 0 30rpx;
  display: inline-block;
  text-align: center;
  color: #656565;
}

.nav-item.active {
  color: #37d260;
}

.name.active {
  border-bottom: 6rpx solid #37d260;
}

.good-content {
  background: #ffffff;
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.tab-content {
  overflow-y: scroll;
}

.weui-navbar__slider {
  height: 3px;
  background-color: #37d260;
}

.weui-navbar__item.weui-bar__item_on {
  color: #37d260;
}



/*商品*/
.good-content{
  padding: 0 40rpx;
  /* margin-top: 50rpx; */
}
.good-list{
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1px solid #EEEEEE;
}
.good-img{
  display: flex;
  align-items: center;
}
.good-list .good-img{
  margin: 0 50rpx 0 0;
}
.good-list .good-img image{
  width: 180rpx;
  height: 180rpx;
}
.good-desc{
  position: relative;
  width: 100%;
}
.good-list .title{
  font-size:14px;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:#212121;
}
.good-list .text{
  font-size:14px;
  color:#656565;
}
.good-price{
  position: absolute;
  bottom: 0;
  width:100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
}
.price{
  flex: 1;
  /* margin:  0 10rpx; */
}
.present-price{
  color: #FF9F06;
  font-size: 15px;
  padding: 0 20rpx 0 0;
}
.original{
  text-decoration:line-through;
  color: #969696;
  font-size: 15px;
}
.add{
  width:100%;
  display: flex;
  align-items: center;
  justify-content:flex-end; 
}

.add image{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
}