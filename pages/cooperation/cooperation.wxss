/* pages/user/user.wxss */
.header{
  width:100%;
  height: 367rpx;
}
.user-content-info{
  padding: 40rpx 40rpx 30rpx 40rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.user-content-info image{
  width: 124rpx;
  height: 124rpx;
  border-radius: 50%;
}

.userimg{
  display: flex;
  align-items: center;
}
.user-name{
  margin-left: 30rpx;
  /* display: flex; */
}
.user-name .name{
  color: #FFFEFE;
  font-size: 16px;
  padding: 0 0 20rpx 0;
}
.type-user{
  width:106rpx;
  height:32rpx;
  background:rgba(44,194,84,1);
  border:1px solid rgba(141,229,164,1);
  border-radius:16rpx;
  font-size: 11px;
  color: #FFFEFE;
  text-align: center;
}

/*优惠券*/
.coupon-content{
  display: flex;
  padding: 0 40rpx;
}
.coupon{
  flex: 1;
  text-align: center;
  color:#ffffff;
  font-size: 16px;
}
.coupon-color,.balance{
  font-size:13px;
}
.user-info{
  position: relative
}


.cooperation-list{
  margin: 0 40rpx;
}
.cooperation-list .left .title{
  color: #212121;
  font-size: 14px;
  padding: 0 0 20rpx 0;
}

.order,.time{
  color: #656565;
  font-size: 13px;
}

.list-item{
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1px solid #EEEEEE
}

.left{
  flex: 1
}

.right{
  /* display: flex; */
  text-align: right;
}

.price{
  color: #212121;
  font-size: 14px;
  padding: 0 0 20rpx 0;
}
.username{
  color: #656565;
  font-size: 13px
}