.freight{
  font-size: 14px;
  color: #212121
}
.freight-detail{
  font-size: 12px;
  color: #909090;
  margin-left: 20rpx;
}

.no-use{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  font-size: 14px;
  padding:0 20rpx;
  color:#212121;
}
.use-image image{
  width: 40rpx;
  height: 40rpx;
}