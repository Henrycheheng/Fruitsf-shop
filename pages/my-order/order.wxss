page {
  width: 100%;
  height: 100%;
    background: #f5f5f5;
}

.container {
  width: 100%;
  height: 100%;
}
.navbar{
  background: #fff;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.nav {
  width: 100%;
  line-height: 74rpx;
  font-size: 13px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  background: #ffffff;
}

.nav-item {
  position: relative;
  width:148rpx;
  display: inline-block;
  text-align: center;
  color: #656565;
  height: 74rpx;
}

.nav-item.active {
  color: #37d260;
}

.active {
  border-bottom: 6rpx solid #37d260;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
