/* pages/order-payment/order-payment.wxss */
.header-title{
  width:670rpx;
  height:120rpx;
  margin: 0 auto;
  line-height: 120rpx;
  color: #ffffff;
  background:rgba(55,210,96,1);
  border-radius:4px;
}

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.7;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  height: 565rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  border-radius: 4rpx 4px 0 0; 
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}
.pay-type-text{
  text-align: center;
  color: #212121;
  font-size: 14px;
}

.pay-status{
  color: #909090;
  font-size: 12px;
  text-align: center;
}

.pay-price{
  font-size: 18px;
  text-align: center;
  color: #212121;
}

.requestPayment{
  position: fixed;
  bottom: 30rpx;
  left: 30rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
  text-align: center;
  color: #ffffff;
  line-height: 60rpx;
  right: 30rpx;
  background: #37D260
}