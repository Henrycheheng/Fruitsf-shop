/* pages/pay-success/pay-success.wxss */

page {
  background: #f5f5f5;
}

.good-detail {
  display: flex;
  padding: 40rpx 40rpx;
  background: #fff;
}

.top {
  background: #fff;
  height: 660rpx;
}

.good-image {
  display: flex;
  align-items: center;
}

.good-detail .good-image image {
  width: 156rpx;
  height: 156rpx;
}

.shop-detail {
  padding: 0 0 0 60rpx;
}

.shop-detail .desc {
  font-size: 15px;
  color: #656565;
}

.good-price {
  display: flex;
  align-items: center;
}

.new {
  color: #ff9f06;
  font-size: 16px;
}

.old {
  margin-left: 20rpx;
  color: #969696;
  text-decoration: line-through;
  font-size: 15px;
}

.user-list {
  display: flex;
  padding: 40rpx 40rpx;
  background: #fff;
  flex-wrap: wrap;
  justify-content: space-around;
}

.user-image {
  margin: 0 24rpx 20rpx 0;
  position: relative;
}

.user-image:first-child {
  border: 3rpx solid rgba(255, 159, 6, 1);
  border-radius: 50%;
  width: 104rpx;
  height: 104rpx;
  position: relative;
}

.user-image image {
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
}

.item-style {
  width: 104rpx;
  height: 104rpx;
  background: rgba(255, 255, 255, 1);
  border: 3rpx dashed rgba(210, 210, 210, 1);
  border-radius: 50%;
  text-align: center;
  line-height: 104rpx;
  color: #d2d2d2;
  font-size: 15px;
}

.tuanzhang {
  width: 80rpx;
  height: 32rpx;
  background: rgba(255, 159, 6, 1);
  border-radius: 6rpx;
  font-size: 12px;
  color: #fff;
  line-height: 32rpx;
  text-align: center;
  position: absolute;
  margin: 0 auto;
  left: 0;
  right: 0;
  top: 84rpx;
}

.friend {
  width: 565rpx;
  height: 80rpx;
  background: rgba(241, 102, 80, 1);
  border-radius: 10rpx;
  color: #fff;
  line-height: 80rpx;
  font-size: 16px;
}

.share-title {
  color: #656565;
  font-size: 13px;
  text-align: center;
  padding: 20rpx 0;
}
.share-txt{
  color: #212121;
  font-size: 16px;
}

.weui-loadmore__tips_in-line {
  background: #f5f5f5;
  color: #212121;
  font-weight: bold;
  font-size: 16px;
}

/* 推荐商品 */

.recommend {
  display: flex;
  /* background: #ffffff; */
  justify-content: space-between;
  margin: 0 20rpx;
}

.recommend-list {
  width: 345rpx;
  height: 403rpx;
  /* display: flex; */
  text-align: center;
  /* padding: 24rpx 0 24rpx 0; */
  background: #fff;
}

.recommend-list image {
  width: 210rpx;
  height: 210rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  display: inline-block;
}

.rec-desc {
  color: #212121;
  padding: 0 20rpx;
  font-size: 14px;
  font-weight: 500;
}

.num-total {
  width: 100rpx;
  height: 40rpx;
  background: rgba(55, 210, 96, 1);
  color: #fff;
  font-size: 13px;
  border-radius: 10rpx 0rpx 10rpx 0rpx;
}

.fotter {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  justify-content: space-between;
}

.btn-to {
  width: 120rpx;
  height: 44rpx;
  background: rgba(255, 164, 19, 1);
  border-radius: 6rpx;
  color: #fff;
  font-size: 13px;
}

.new-price {
  font-size: 14px;
  color: #ff9f06;
}

.old-price {
  font-size: 12px;
  color: #969696;
  margin-left: 10rpx;
  text-decoration: line-through;
}

.recom-title {
  color: #212121;
  text-align: center;
  font-size: 18px;
  font-weight: bold;
  padding: 40rpx 0;
}

.recom-title:before, .recom-title:after {
  content: "";
  width: 100px;
  border-top: 2px #eee solid;
  display: inline-block;
  vertical-align: middle;
}

.recom-title:before {
  margin-right: 10px;
}

.recom-title:after {
  margin-left: 10px;
}
