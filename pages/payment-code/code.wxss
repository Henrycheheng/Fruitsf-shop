/* pages/payment-code/code.wxss */
page{
  background: #F5F5F5;
}
.user-info{
  display: flex;
  padding: 30rpx 30rpx;
  align-items: center;
  
}
.user-info .right{
 margin-left: 20rpx;
}
.left image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.user-content{
  margin: 40rpx 40rpx 0 40rpx;
  background:#ffffff;
  border-radius:20rpx;
  padding: 0 0 40rpx 0;
}
.user-name{
  font-size: 18px;
  color: #212121;
  font-weight: bold;
}
.user-desc{
  color: #8B8B8C;
  font-size: 13px;
}
.pay-code{
  display: flex;
  width: 590rpx;
  height: 590rpx;
  border-radius: 10rpx;
  margin: 0 auto;
  align-items: center;
  background: #f5f5f5;
  justify-content: center
}
.pay-code image{
  width: 430rpx;
  height: 430rpx;
}
.title{
  color: #8B8B8C;
  text-align: center;
  font-size: 14px;
  padding: 30rpx 0 0 0;
}